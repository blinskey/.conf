readonly ANDROID_STUDIO=/opt/android-studio/bin/studio.sh

if [[ -f /usr/bin/vim || -f /usr/local/bin/vim ]]; then
    alias vi=vim
fi

alias l='ls -Ahl'
alias ll=l
alias lll='ls -Ahl --color=always | less -R'

# Enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Always start tmux in 256-color mode.
alias tmux='tmux -2'

# Android Studio alias that runs in background
if [[ -f "$ANDROID_STUDIO" ]]; then
    function androidstudio() {
        "$ANDROID_STUDIO" "$@" &
    }
fi

# ProGuard stack trace decoding script for debugging Android apps
alias proguardretrace=~/Android/Sdk/tools/proguard/bin/retrace.sh

# Always run lynx with the "textfields need activation" option (also
# configurable in lynx.cfg).
alias lynx='lynx -tna'
