[user]
	name = Benjamin Linskey
	email = git@linskey.org
[push]
	default = simple
[commit]
	verbose = true
[core]
	excludesfile = ~/.gitignore_global
[merge]
	tool = vimdiff
[tag]
	sort = version:refname
[color]
	ui = false
	diff = true
[color "decorate"]
	branch = normal
	remoteBranch = normal
	tag = normal
	stash = normal
	HEAD = normal
[color "diff"]
	commit = normal
