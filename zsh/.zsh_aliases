alias l='ls -Ahl'
alias ll=l

alias vi=vim

# Android Studio alias that runs in background
function androidstudio() {
    /opt/android-studio/bin/studio.sh "$@" &
}

# ProGuard stack trace decoding script for debugging Android apps
alias proguardretrace=~/Android/Sdk/tools/proguard/bin/retrace.sh

# Pipe ls output into less with color output.
alias lll='ls -Ahl --color=always | less -R'

# Enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

